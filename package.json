{
  "name": "devjobs",
  "private": true,
  "workspaces": [
    "api",
    "frontend"
  ],
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "arktype": "^2.1.16"
  },
  "scripts": {
    "build:api": "bun build api/index.ts --outdir dist/api --target bun",
    "dev:api": "bun run --watch --hot api/index.ts",
    "start:api": "bun run build:api && bun run dist/api/index.js",
    "test:api": "bun test ./api/**/*.test.ts",
    "dev:frontend": "cd frontend && next dev --turbopack",
    "build:frontend": "cd frontend && next build",
    "start:frontend": "cd frontend && next start",
    "lint:frontend": "cd frontend && next lint"
  }
}
